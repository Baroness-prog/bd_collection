{% extends 'base.html.twig' %}

{% block title %}Hello Wishlist{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="text-center">Voici ta wishlist âœ…</h1>
    <a class="alert-danger text-center" href="{{ path('wishlist_add') }}"> Ajouter</a>

    {% for wishlist in wishlists %}
     <ul class="list-group list-group-flush">
            <li class="list-group-item">{{ wishlist.title }}  - Tome : {{ wishlist.tome }}  - {{ wishlist.genre }}
                <img  class="image_wish" data-isbn={{ wishlist.image}}  src="https://covers.openlibrary.org/b/isbn/{{ wishlist.image }}.jpg" alt="">
            </li>
    </ul>
    {% endfor %}
</div>
    <script src="/js/booksearch.js"></script>
{% endblock %}
